		List<Bank> BankAsociado = new ArrayList<>();
		 
		BankAsociado = this.bankAccountApiClient.getDebitCardbyCustomerNumberCreditCard(transaction.getNumberDebitCard());	
		 
		
		return null;
	
	}

}
